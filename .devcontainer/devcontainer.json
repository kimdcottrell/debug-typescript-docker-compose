// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-docker-compose
{
	"name": "TS: Existing Docker Compose (Extend)",

	// Update the 'dockerComposeFile' list if you have more compose files or use different names.
	// The .devcontainer/docker-compose.yml file contains any overrides you need/want to make.
	"dockerComposeFile": [
		"../docker-compose.yml"
	],

	// The 'service' property is the name of the service for the container that VS Code should
	// use. Update this value and .devcontainer/docker-compose.yml to the real service name.
	"service": "app",

	// The optional 'workspaceFolder' property is the path VS Code should open by default when
	// connected. This is typically a file mount in .devcontainer/docker-compose.yml
	"workspaceFolder": "/workspaces",
	"features": {
		"ghcr.io/devcontainers/features/python:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"charliermarsh.ruff",
				"hbenl.vscode-test-explorer",
				"ms-azuretools.vscode-docker",
				"ms-vscode-remote.remote-containers",
				"Catppuccin.catppuccin-vsc" // this is optional, but I use it on everything and this is my repo so huzzah
			],
			"settings": {
				"workbench.colorTheme": "Catppuccin Frapp√©", // this is optional, but I use it on everything and this is my repo so huzzah
                "python.defaultInterpreterPath": "/usr/local/bin/python",
				"python.analysis.extraPaths": ["/usr/local/lib/python*/site-packages"],
				"python.testing.unittestEnabled": true,
				"python.testing.pytestEnabled": false,
				"python.testing.nosetestsEnabled": false,
				"python.testing.autoTestDiscoverOnSaveEnabled": true,
				"python.testing.unittestArgs": ["-m", "unittest", "tests/python/tests.py"], // file where all tests are summarized
				"testing.autoRun.delay": 2000,
                "testing.autoRun.enabled": "on",
				"terminal.integrated.shell.linux": "bash",
				"terminal.integrated.profiles.linux": {
					"bash (container default)": {
						"path": "/usr/bin/bash",
						"overrideName": true
					}
				}
            }
		}
	},
	// Uncomment the next line if you want to keep your containers running after VS Code shuts down.
	"shutdownAction": "none",

	// Uncomment to connect as an existing user other than the container default. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "local"
}
